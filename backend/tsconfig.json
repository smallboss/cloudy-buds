{
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "compilerOptions": {
      "allowJs": true,
      "module": "esnext",
      "lib": ["ES5"],
      "declaration": true,
      "declarationDir": "./src/types",
      "baseUrl": "."
    }
  },
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["es5"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
//    "strict": true,
//    "noImplicitAny": true,
//    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
